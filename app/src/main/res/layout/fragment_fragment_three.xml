<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.day43_testhomework.fragment.FragmentThree">

    <VideoView
        android:id="@+id/fragment_three_videoView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/fragment_three_fullorexit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/check_pullorexit_selector" />

        <ImageView
            android:id="@+id/playerId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/playcontrol"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</FrameLayout>
